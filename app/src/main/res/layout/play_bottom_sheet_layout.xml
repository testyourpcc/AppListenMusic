<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">


    <LinearLayout
        android:id="@+id/hengio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8sp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_alarm_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hen gio"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8sp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/playlist_add_24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to play list"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>

<LinearLayout
        android:id="@+id/openPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8sp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/open_playlist_24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open playlist"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_marginLeft="20sp"/>
    </LinearLayout>


</LinearLayout>